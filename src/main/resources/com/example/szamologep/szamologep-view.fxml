<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="134.0" prefWidth="234.0" spacing="12.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.szamologep.SzamologepController">
	<padding>
		<Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
	</padding>
   <children>
      <HBox spacing="58.0">
         <children>
            <TextField fx:id="elsoSzam" alignment="CENTER" onMouseClicked="#eredmenyTorlese" prefWidth="76.0" promptText="1. szám" />
            <TextField fx:id="masodikSzam" alignment="CENTER" onMouseClicked="#eredmenyTorlese" prefWidth="76.0" promptText="2. szám" />
         </children>
      </HBox>
      <HBox spacing="12.0">
         <children>
            <Button fx:id="osszeadasGomb" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#osszeadas" prefHeight="32.0" prefWidth="32.0" text="+" textAlignment="CENTER" />
            <Button fx:id="kivonasGomb" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#kivonas" prefHeight="32.0" prefWidth="32.0" text="-" textAlignment="CENTER">
               <padding>
                  <Insets bottom="4.0" />
               </padding>
            </Button>
            <Button fx:id="szorzasGomb" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#szorzas" prefHeight="32.0" prefWidth="32.0" text="*" textAlignment="CENTER">
               <padding>
                  <Insets top="6.0" />
               </padding>
            </Button>
            <Button fx:id="osztasGomb" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#osztas" prefHeight="32.0" prefWidth="32.0" text="/" textAlignment="CENTER" />
            <Button fx:id="szazalekGomb" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#maradekosOsztas" prefHeight="32.0" prefWidth="32.0" text="\%" textAlignment="CENTER" />
         </children>
      </HBox>
      <Label fx:id="eredmeny" alignment="CENTER" contentDisplay="CENTER" prefWidth="120.0" style="-fx-font-size: 24;" textAlignment="CENTER">
         <VBox.margin>
            <Insets left="45.0" />
         </VBox.margin>
      </Label>
   </children>
</VBox>
